// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  username    String       @unique
  email       String       @unique
  role        UserRole
  password    String
  status      UserStatus   @default(ACTIVE)
  isDeleted   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userProfile UserProfile?

  @@map("users")
}

model UserProfile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId
  firstName   String?
  lastName    String?
  image       String?
  gender      Gender?
  dateOfBirth String?
  address     String?
  phone       String?
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("user_profiles")
}

model Student {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  studentId      String        @unique
  firstName      String
  lastName       String
  gender         Gender
  dateOfBirth    String
  address        String
  phone          String?
  email          String?
  enrolementDate DateTime      @default(now())
  status         StudentStatus @default(ACTIVE)
  isDeleted      Boolean       @default(false)
  parentId       String        @unique @db.ObjectId
  parent         Parent        @relation(fields: [parentId], references: [id])
  classId        String        @db.ObjectId
  class          Class         @relation(fields: [classId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("students")
}

model Parent {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  fathersName      String
  mothersName      String
  phoneNumber      String
  email            String?
  address          String
  alternativePhone String?
  guardianName     String
  relationship     String
  isDeleted        Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  student          Student?

  @@map("parents")
}

model Class {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  className    String
  teacherId    String?
  classroom    String
  capacity     String
  academicYear String
  isDeleted    Boolean   @default(false)
  students     Student[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("classes")
}

enum Status {
  PENDING
  BOOKED
  REJECTED
}

enum UserRole {
  SUPERADMIN
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
  SUSPENDED
  WITHDRAWN
}

enum Gender {
  Male
  Female
}
