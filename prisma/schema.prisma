// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  username    String       @unique
  email       String       @unique
  role        UserRole
  password    String
  status      UserStatus   @default(ACTIVE)
  isDeleted   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  UserProfile UserProfile?

  @@map("users")
}

model UserProfile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId
  firstName   String?
  lastName    String?
  image       String?
  gender      Gender?
  dateOfBirth String?
  address     String?
  phone       String?
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("user_profiles")
}

model Students {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  studentId      String        @unique
  firstName      String
  lastName       String
  gender         Gender
  dateOfBirth    String
  address        String
  phone          String?
  email          String?
  enrolementDate DateTime      @default(now())
  status         StudentStatus
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("students")
}

enum Status {
  PENDING
  BOOKED
  REJECTED
}

enum UserRole {
  SUPERADMIN
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
  SUSPENDED
  WITHDRAWN
}

enum Gender {
  Male
  Female
}
